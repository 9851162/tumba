<?xml version="1.0" encoding="UTF-8"?>

<beans:beans xmlns="http://www.springframework.org/schema/security" 
             xmlns:beans="http://www.springframework.org/schema/beans" 
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
             xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
          http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.1.xsd">
  
    <http pattern="/css/**" security="none" />
    <http pattern="/js/**" security="none" />
  
    <http pattern="/img/**" security="none" />
    <http pattern="/fonts/**" security="none" />
    
    <http auto-config='true' use-expressions="true" >
        <intercept-url pattern="/Images/" access="hasAnyRole('ROLE_ANONYMOUS','user', 'admin')" />
        <intercept-url pattern="/Main/" access="hasAnyRole('ROLE_ANONYMOUS','user', 'admin')" />
        <intercept-url pattern="/Main/registration" access="hasAnyRole('ROLE_ANONYMOUS')" />
        <intercept-url pattern="/Main/authorize" access="hasAnyRole('user', 'admin')" />
        <intercept-url pattern="/Ad/add" access="hasAnyRole('ROLE_ANONYMOUS','user', 'admin')" />
        <intercept-url pattern="/Ad/setChosen" access="hasAnyRole('user', 'admin')" />
        <intercept-url pattern="/Admin/administrating" access="hasAnyRole( 'admin')" />
        <intercept-url pattern="/Admin/addCat" access="hasAnyRole( 'admin')" />
        
        <intercept-url pattern="/index" access="hasAnyRole('user', 'admin')" />  
        <intercept-url pattern="/" access="hasAnyRole('user', 'admin')" />
        
        <intercept-url pattern="/**" access="hasRole('admin')" />
        
        <logout logout-url="/logout" logout-success-url="/Main/" invalidate-session="true"/>
        <form-login login-page="/Main/" default-target-url="/Main/authorize" always-use-default-target="true" authentication-failure-url="/Main/?error=true"
        />

           
        <anonymous username="guest" granted-authority="ROLE_ANONYMOUS" />
    </http>
    
 
  
    <authentication-manager>
        <authentication-provider >
            <password-encoder hash="md5"/>
            <jdbc-user-service data-source-ref="dataSource" 
                               users-by-username-query="select email, password, true from user where email = ?"
                               authorities-by-username-query="select e.email, u.user_role from user e, user u WHERE e.user_id=u.user_id and e.email=? limit 1"/> 
        </authentication-provider>
    </authentication-manager>
</beans:beans>
